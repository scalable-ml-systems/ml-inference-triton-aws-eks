{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "replicaCount": {
      "type": "integer",
      "minimum": 1,
      "default": 1,
      "description": "Number of Triton pods to run"
    },
    "image": {
      "type": "object",
      "properties": {
        "repository": { "type": "string" },
        "tag": { "type": "string" },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"]
        }
      },
      "required": ["repository", "tag"]
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": "string" },
        "annotations": { "type": "object" }
      },
      "required": ["name"]
    },
    "resources": {
      "type": "object",
      "properties": {
        "limits": { "type": "object" },
        "requests": { "type": "object" }
      }
    },
    "nodeSelector": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "tolerations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "key": { "type": "string" },
          "operator": { "type": "string" },
          "effect": { "type": "string" }
        }
      }
    },
    "modelRepo": {
      "type": "object",
      "properties": {
        "s3": {
          "type": "object",
          "properties": {
            "bucket": { "type": "string" },
            "prefix": { "type": "string" },
            "region": { "type": "string" }
          },
          "required": ["bucket", "region"]
        }
      }
    },
    "ports": {
      "type": "object",
      "properties": {
        "http": { "type": "integer" },
        "grpc": { "type": "integer" },
        "metrics": { "type": "integer" }
      },
      "required": ["http", "grpc", "metrics"]
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
        },
        "port": { "type": "integer" }
      },
      "required": ["type", "port"]
    }
  },
  "required": ["replicaCount", "image", "serviceAccount", "ports", "service"]
}
